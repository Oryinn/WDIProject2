<div>
    {{#if currentUser}}
    <a class="btn btn-info" href="/apparel/new">+ Add Apparel</a>
    {{/if}}
</div>
<div>
{{#each apparel}}
    <div class="row">
        <div class="col-sm-8">
            <img class="apparelImg" src = {{imgLink}}>
            <div class="col-sm-8">
                <div class="row">
                    <div class="col-sm-8">
                        <h4>
                            <a href='/apparel/{{_id}}'>{{name}}</a>
                        </h4>
                        ${{listPrice}}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{notes}}
                    </div>
        </div>
    </div>
{{/each}}
</div>
