<div class="container">
    <a href="/apparel/{{apparel.id}}">Back</a>
    <form action="/apparel/{{apparel.id}}?_method=PUT" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="{{apparel.name}}">
    <br>
    <label for="type">Type</label>
    <input type="text" name="type" id="type"value="{{apparel.type}}">
    <br>
    <label for="size">Size</label>
    <input type="text" name="size" id="size" value="{{apparel.size}}">
    <br>
    <label for="boughtPrice">Bought at: </label>
    <input type="number" name="boughtPrice" id="boughtPrice" value="{{apparel.boughtPrice}}">
    <br>
    <label for="listPrice">List Price: </label>
    <input type="number" name="listPrice" id="listPrice" value="{{apparel.listPrice}}">
    <br>
    <label for="imgLink">Image Link</label>
    <input type="text" name="imgLink" id="imgLink" value="{{apparel.imgLink}}">
    <br>
    <label for="notes">notes</label>
    <textarea name="notes" id="notes" cols="30" rows="6" value="{{apparel.notes}}"></textarea>
    <br>
    <input type="submit" value="Submit">
</form>
</div>