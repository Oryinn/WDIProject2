<div class="container">
    <a class="btn btn-info" href="/apparel">View Apparel</a>
    <a class="btn btn-info" href="/accessory">View Accessories</a>
    {{#if currentUser}}
    <a class="btn btn-info" href="/apparel/new">+ Add Apparel</a>
    <a class="btn btn-info" href="/accessory/new">+ Add Accessory</a>
    {{/if}}
</div>
<div class="container">
    {{#each apparel}}
    <div class="row">
        <div class="col-sm-8">
            <img class="apparelImg" src={{imgLink}}>
            <div class="col-sm-8">
                <div class="row">
                    <div>
                        <h4>
                            <a href='/apparel/{{_id}}'>{{name}}</a>
                        </h4>
                        ${{listPrice}} {{#if ../currentUser}}
                        <div>Bought for: ${{boughtPrice}}</div>
                        <div>Bought: {{boughtDate}}</div>
                            {{/if}}
                    </div>

                </div>
                <div class="row">
                    <div class="col">
                        Notes: {{notes}}
                    </div>
                </div>
            </div>
            {{/each}}
            {{#each accessory}}
            <div class="row">
                <div class="col-sm-8">
                    <img class="apparelImg" src={{imgLink}}>
                    <div class="col-sm-8">
                        <div class="row">
                            <div>
                                <h4>
                                    <a href='/accessory/{{id}}'>{{name}}</a>
                                </h4>
                                ${{listPrice}} {{#if ../currentUser}}
                                <div>Bought for: ${{boughtPrice}}</div>
                                <div>Bought: {{boughtDate}}</div>
                                    {{/if}}
                            </div>

                        </div>
                        <div class="row">
                            <div class="col">
                                Notes: {{notes}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>