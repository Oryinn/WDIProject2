<div class="container">
    <a href="/accessory/{{accessory.id}}">Back</a>
    <form action="/accessory/{{accessory.id}}?_method=PUT" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="{{accessory.name}}">
    <br>
    <label for="type">Type</label>
    <input type="text" name="type" id="type"value="{{accessory.type}}">
    <br>
    <label for="boughtPrice">Bought at: </label>
    <input type="number" name="boughtPrice" id="boughtPrice" value="{{accessory.boughtPrice}}">
    <br>
    <label for="listPrice">List Price: </label>
    <input type="number" name="listPrice" id="listPrice" value="{{accessory.listPrice}}">
    <br>
    <label for="imgLink">Image Link</label>
    <input type="text" name="imgLink" id="imgLink" value="{{accessory.imgLink}}">
    <br>
    <label for="notes">notes</label>
    <textarea name="notes" id="notes" cols="30" rows="6" value="{{accessory.notes}}"></textarea>
    <br>
    <input type="submit" value="Submit">
</form>
</div>