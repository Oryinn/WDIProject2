
<div>
    {{#if currentUser}}
    <a class="btn btn-info" href="/accessory/new">+ Add Accessory</a>
    {{/if}}
</div>

{{#each accessory}}
    <div class="row">
        <div class="col-sm-8">
            <img class="apparelImg" src = {{imgLink}}>
            <div class="col-sm-8">
                <div class="row">
                    <div class="col-sm-8">
                        <h4>
                            <a href='/accessory/{{id}}'>{{name}}</a>
                        </h4>
                        ${{listPrice}}
                    </div>
                    <div class="col-sm-6">
                        
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{notes}}
                    </div>
        </div>
    </div>
{{/each}}